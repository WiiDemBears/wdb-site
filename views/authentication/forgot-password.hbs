<div id="forgot-pass" class="container-fluid d-flex align-items-center justify-content-center h-100">
    <div class="d-flex flex-column card " style="width: 22.5em; ">
        <div class="card-body">
            <form action="/forgot-password" method="POST">
                <h1 class="text-center">Forgot Password?</h1>
                {{#if flashMessage}}
                <div>{{flashMessage}}</div>
                {{/if}}
                <div class="form-group">
                    <label for="email">
                        <b>Email</b>
                    </label>
                    <input type="email" class="form-control" placeholder="Bloshi@gmail.com" name="email" required>
                </div>
                <div class="text-center">
                    <button class="submit-button " type="submit ">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>