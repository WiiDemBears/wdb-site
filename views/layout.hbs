<body>
    <div class="topnav" id="myTopnav">
        <a href="/" class="active">Wii Dem Bears</a>
        <a href="/down">Down</a>
        <a href="/quotes">Quotes</a>
        <a href="/memes">Memes</a>
        <a id="login_button" onclick="document.getElementById('id01').style.display='block'">Login</a>
        <a href="javascript:void(0);" class="icon" onclick="myFunction()">&#9776;</a>
    </div>
    <!-- Login Form -->
    <div id="id01" class="modal">
        <form class="modal-content animated slideInUp" action="/action_page.php">
            <form class="modal-content animate" action="/login" method: "POST">
                <div class="grid-container">
                    <h1 class="grid-item">Login</h1>
                    <!--   
                    Todo: Change class and format this error message appropriately. 
                    If there is an error, passport will capture it and connect-flash will display it.

                    {{#if error}}
                        <div class = "alert alert-danger">{{error}}</div>
                    {{/if}}
                -->
                    <label class="grid-item" for="uname">
                        <b>Username</b>
                    </label>
                    <div class="grid-item">
                        <input class="grid-item" type="text" placeholder="Bloshi" name="username" required>
                    </div>
                    <label class="grid-item" for="psw">
                        <b>Password</b>
                    </label>
                    <div class="grid-item">
                        <input class="grid-item" type="password" placeholder="Yuta123" name="password" required>
                    </div>
                    <p class="grid-item">
                        <a href="/forgot_password">Forgot password?</a>
                    </p>
                    <label class="grid-item" id="checkbox">
                        <input type="checkbox" checked="checked" name="remember"> Remember me
                    </label>
                    <div class="grid-item">
                        <button type="submit">Login</button>
                    </div>
                </div>
            </form>
    </div>
    <!-- Register Form -->
    <div id="id02" class="modal">
        <form class="modal-content animate" action="/register" method: "POST">
            <div class="grid-container">
                <h1 class="grid-item">Register</h1>
                <!--   
                    Todo: Change class and format this error message appropriately. 
                    If there is an error, passport will capture it and connect-flash will display it.

                    {{#if error}}
                        <div class = "alert alert-danger">{{error}}</div>
                    {{/if}}
                -->
                <label class="grid-item" for="fname">
                    <b>First Name</b>
                </label>
                <div class="grid-item">
                    <input class="grid-item" type="text" placeholder="John" name="firstname" required>
                </div>
                <label class="grid-item" for="lname">
                    <b>Last Name</b>
                </label>
                <div class="grid-item">
                    <input class="grid-item" type="text" placeholder="Doe" name="lastname" required>
                </div>
                <label class="grid-item" for="email">
                    <b>Email</b>
                </label>
                <div class="grid-item">
                    <input class="grid-item" type="text" placeholder="johndoe@gmail.com" name="email" required>
                </div>
                <label class="grid-item" for="uname">
                    <b>Username</b>
                </label>
                <div class="grid-item">
                    <input class="grid-item" type="text" placeholder="Bloshi" name="username" required>
                </div>
                <label class="grid-item" for="psw">
                    <b>Password</b>
                </label>
                <div class="grid-item">
                    <input class="grid-item" type="password" placeholder="Yuta123" name="password" required>
                </div>
                <div class="grid-item">
                    <button type="submit">Submit</button>
                </div>
            </div>
        </form>
    </div>

