<div class="grid-container-register">
    <form class="form-container-register" action="/register" method="POST">
        <h1>Register</h1>
        {{#if error}}
        <div id="error_message">{{error}}</div>
        {{/if}}
        <div class="register-grid-item">
            <label for="fname">
                <b>First Name</b>
            </label>
        </div>
        <input type="text" placeholder="John" name="firstname" required>
        <div class="register-grid-item">
            <label for="lname">
                <b>Last Name</b>
            </label>
        </div>
        <input type="text" placeholder="Doe" name="lastname" required>
        <div class="register-grid-item">
            <label for="email">
                <b>Email</b>
            </label>
        </div>
        <input type="email" placeholder="johndoe@gmail.com" name="email" required>
        <div class="register-grid-item">
            <label for="uname">
                <b>Username</b>
            </label>
        </div>
        <input type="text" placeholder="Bloshi" name="username" required>
        <div class="register-grid-item">
            <label for="psw">
                <b>Password</b>
            </label>
        </div>
        <input type="password" placeholder="Yuta123" name="password" required>
        <button class="submit-button" type="submit">Submit</button>
    </form>
</div>