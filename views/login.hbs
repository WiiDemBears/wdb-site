<div class="account-form-content">
    <form class="form-login" action="/login" method="POST">
        <div class="grid-container-account-form">
            <div class="grid-item-account-form">
                <h1 class="btn">Login</h1>
            </div>
            {{#if error}}
            <div id="error_message" class="grid-item-account-form">{{error}}</div>
            {{/if}}
            <label class="grid-item-account-form" for="uname">
                <b>Username</b>
            </label>
            <div class="grid-item-account-form">
                <input class="grid-item-account-form" type="text" placeholder="Bloshi" name="username" required>
            </div>
            <label class="grid-item-account-form" for="psw">
                <b>Password</b>
            </label>
            <div class="grid-item-account-form">
                <input class="grid-item-account-form" type="password" placeholder="Yuta123" name="password" required>
            </div>
            <div id="forgot-pass" class="grid-item-account-form">
                <a href="/forgot-password">Forgot password?</a>
            </div>
            <label id="checkbox" class="grid-item-login">
                <input type="checkbox" name="remember"> Keep me logged in
            </label>
            <div class="grid-item-account-form">
                <button class="submit-button" type="submit">Login</button>
                <p>Don't have an account?
                    <span>
                        <a id="signup_link" href="/register">Sign Up</a>
                    </span>
                </p>
            </div>
        </div>
    </form>
</div>